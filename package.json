{
  "name": "ludium",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/shared",
      "packages/backend",
      "packages/frontend"
    ]
  },
  "scripts": {
    "dev:backend": "yarn workspace backend run dev",
    "dev:frontend": "yarn workspace frontend run dev",
